<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="821dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="771dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/FrameTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bottom_big"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/verve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_verve_off" />

            <ImageView
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_shop_off" />

            <ImageView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_message_off" />

            <ImageView
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_other_off" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>